@model BandAide.Web.Models.ViewModels.NeedBandQueryViewModel


@{
    ViewBag.Title = "Search by instrument";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.DropDownListFor(model => model.SelectedInstrumentId, Model.MyInstrumentsSelectList)
            <div class="col-md-10">
                @Html.HiddenFor(model => model.User.Id)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Start search" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
