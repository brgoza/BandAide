@using Microsoft.AspNet.Identity
<div class="container"
     style="margin: 0 auto; padding: 0px; text-align: center;">
    <div class = "row" style="height:100%; background-image: url(../../Content/keys.png); background-size: contain; text-align: center;  margin: 0px">
        
        @if (Request.IsAuthenticated)
        {
         
            <ul class="nav navbar-nav navbar">
                <li style="text-align: center">@Html.ActionLink("My Dashboard", "UserDashboard", "Home", null, new { @class = ".nav",style = "height: 30px;"})</li>
                <li class="dropdown"
                    role="presentation">
                <li>
                    <a aria-expanded="false"
                       aria-haspopup="true"
                       class="dropdown-toggle"
                       data-toggle="dropdown"
                       href="#"
                       role="button">
                        @User.Identity.GetUserName() <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Edit Profile", "UserProfile", "Users", new { Id = User.Identity.GetUserId() }, new { @class = "dropdown-items" })</li>
                        <li>
                            @Html.ActionLink("Log off", "LogOff", "Account",null, new { @class = "dropdown-items" })


                        </li>
                    </ul>
                </li>
            </ul>
        }

    </div>

</div>