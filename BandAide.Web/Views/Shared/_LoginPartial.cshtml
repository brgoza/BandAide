@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{  <ul class="nav nav-pills nav-divider">
        <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                @User.Identity.GetUserName() <span class="caret"></span>
            </a>

            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Edit Profile", "UserProfile", "Users", new { Id = User.Identity.GetUserId() }, null)</li>
                <li>@Html.ActionLink("My Dashboard", "UserDashboard", "Home", null, null)</li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            </ul>
    </ul>
}
else
{
    <ul class="nav-pills navbar-nav">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
