@using Microsoft.AspNet.Identity

<div class="container" style="background-color:darkblue;padding:0px;margin:0px;width:125%;">
    <div class="row" style="background-color:gray;padding:0px;margin:0px;">
        @if (Request.IsAuthenticated)
        {
            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-left" }))
            {
                @Html.AntiForgeryToken()
                <ul class="navbar-nav nav">

                    <li class="nav-pills">@Html.ActionLink("My Dashboard", "UserDashboard", "Home", null, htmlAttributes: new { style = "color:blue" })                      </li>

                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            @User.Identity.GetUserName() <span class="caret"></span>
                        </a>

                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Edit Profile", "UserProfile", "Users", new { Id = User.Identity.GetUserId() }, null)</li>

                            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                        </ul>
                </ul>
            }
        }
        else
        {
            <ul class="nav-pills navbar-nav">
                <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
            </ul>
        }
    </div>

</div>