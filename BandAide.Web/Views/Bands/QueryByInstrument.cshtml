@model BandAide.Web.Models.ViewModels.NeedMembersQueryViewModel

@{
    ViewBag.Title = "Search by instrument";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   
    <div class="form-horizontal" style="padding-top: 15px">
        @Html.HiddenFor(model => model.Band.Id)
        @foreach (var instrument in Model.InstrumentSelectList)
        {
            //public ActionResult QueryByInstrument(Guid bandId, Guid selectedInstrumentId)
            <a href="@Url.Action("ExecuteQueryByInstrument",new {bandId=Model.Band.Id, selectedInstrumentId=instrument.Value})">
                <img id=@instrument.Value src=@("/content/"+instrument.Text +"_icon.png") width="100px"/>
            </a>
        }
        @*<div class="form-group">
            @Html.DropDownListFor(model => model.SelectedInstrumentId, Model.InstrumentSelectList)
            <div class="col-md-10">
               
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
