@model BandAide.Web.Models.ViewModels.QueryByInstrumentViewModel

@{
    ViewBag.Title = "Search by instrument";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.DropDownListFor(model => model.InstrumentId, Model.InstrumentSelectList)
            <div class="col-md-10">
                @Html.HiddenFor(model => model.BandId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
